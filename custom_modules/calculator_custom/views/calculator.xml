<odoo>

    <!-- Adicion de elementos en add, edit and summary -->
    <record id="view_form_calculator_inherited" model="ir.ui.view">
        <field name="name">form.calculator.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form[1]/sheet[1]/group[1]" position="after">

                <group name="group_custom_filter" string="SelecciÃ³n">
                    <group name="group_custom_filter_left" >
                        <field name="custom_encimera" options="{'no_create': True, 'no_create_edit':True}" />
                        <field name="custom_aplacado" options="{'no_create': True, 'no_create_edit':True}" />
                        <field name="custom_servicio" options="{'no_create': True, 'no_create_edit':True}" />
                    </group>
                    <group name="group_custom_filter_right" >
                        <field name="custom_zocalo" options="{'no_create': True, 'no_create_edit':True}" />
                        <field name="custom_canto" options="{'no_create': True, 'no_create_edit':True}" />
                        <field name="custom_operacion" options="{'no_create': True, 'no_create_edit':True}" />
                    </group>
                </group>
                
            </xpath>
        </field>
    </record>

    <!-- Principal List Tree view-->
    <record id="view_order_tree_custom_form" model="ir.ui.view">
        <field name="name">sale.view_order_tree_custom</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="x_studio_oportunidad" string="Oportunidad"/>
            </field> 
        </field>
    </record>
</odoo>